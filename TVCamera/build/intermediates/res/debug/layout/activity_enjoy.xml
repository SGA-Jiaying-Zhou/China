<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/featureintro_bg_ecapps" />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:layout_marginBottom="24dp"
        android:layout_marginLeft="@dimen/intro_all_margin_left"
        android:layout_marginRight="@dimen/intro_all_margin_right"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/recoding_img"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:src="@drawable/tvcamera_featureintro_icon" />
            <TextView
                android:id="@+id/tv_intro_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:gravity="center_vertical"
                android:text="@string/intro_title"
                android:textColor="@color/c1"
                android:textSize="@dimen/intro_header_description_text_size"
                android:layout_marginTop="3dp"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_intro_description_line1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:gravity="left"
            android:text="@string/intro_description_line1"
            android:textColor="@color/c1"
            android:textSize="36sp"
            android:layout_marginBottom="24dp"/>
        <TextView
            android:id="@+id/tv_intro_description_line2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:gravity="left"
            android:text="@string/intro_description_line2"
            android:textColor="@color/c1"
            android:textSize="@dimen/intro_header_description_text_size" />
        <TextView
            android:id="@+id/intro_description_line3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:fontFamily="sans-serif"
            android:gravity="left"
            android:text="@string/intro_description_line3"
            android:textColor="@color/c1"
            android:textSize="@dimen/intro_header_description_text_size" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/camera_mode_name"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    android:fontFamily="sans-serif"
                    android:gravity="left"
                    android:text="@string/camera_mode_name"
                    android:textColor="@color/c1"
                    android:textSize="@dimen/intro_header_description_text_size" />
                <TextView
                    android:id="@+id/tv_intro_description_line4"
                    android:layout_width="580dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="32dp"
                    android:fontFamily="sans-serif"
                    android:gravity="left"
                    android:text="@string/intro_description_line4"
                    android:textColor="@color/c1"
                    android:textSize="@dimen/intro_header_description_text_size" />
            </LinearLayout>
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/cli_100px"
                android:layout_marginStart="136dp"
                android:background="@color/tv_white"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
